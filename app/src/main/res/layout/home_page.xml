<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomePage">

    <!-- "learning python" text -->
    <TextView
        android:id="@+id/LearningPython"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:textSize="35dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:text="Learning Python" />

    <!-- Python icon -->
    <ImageView
        android:id="@+id/PythonIcon"
        android:layout_width="180dp"
        android:layout_height="168dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/python" />

    <!-- "with Libby Pashinsky" text -->
    <TextView
        android:id="@+id/WithLibbyPashinsky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        android:textSize="18dp"
        android:text="with Libby Pashinsky"
        android:textColor="#FFFFFF" />

    <!-- Start button -->
    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="590dp"
        android:text="Press on button to continue"
        android:textSize="20dp" />


    <!-- Login fragment container -->
    <FrameLayout
        android:id="@+id/fragment_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- Register fragment container -->
    <FrameLayout
        android:id="@+id/fragment_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</FrameLayout>
